@model IEnumerable<StudentRegistrationTool.Models.Register>

@{
    ViewBag.Title = "Index";
}

<h2>Overzicht registraties</h2>
<br/>
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table id="table_id" class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PresentFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PresentTill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody>
    @foreach (var item in Model)
    {
        
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PresentFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PresentTill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.ActionLink("Aanpassen", "Edit", new { id = item.Id }) |
                   @* @Html.ActionLink("Details", "Details", new { id = item.Id }) | *@ 
                    @Html.ActionLink("Verwijderen", "Delete", new { id = item.Id })
                </td>
            </tr>

            }
        </tbody>

</table>

@section scripts
    {
    <script>
    $(document).ready(function () {
        $('#table_id').DataTable({
            "language": {
                "search": "Zoeken",
                "infoEmpty": "Geen tijdsregistraties gevonden",
                "lengthMenu": "Toon _MENU_ resultaten per pagina",
                "info": "Pagina _PAGE_ van de _PAGES_ getoond",
                "paginate": {
                    "first": "Eerste",
                    "last": "Laatste",
                    "next": "Volgende",
                    "previous": "Vorige"
                },
            }
        });
    });

</script>
    }
